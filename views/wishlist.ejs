    .premium-slider-track-active {
        position: absolute;
        top: 50%;
        height: 6px;
        background: linear-gradient(90deg, #8b5cf6 0%, #3b82f6 100%);
        border-radius: 3px;
        transform: translateY(-50%);
        transition: all 0.3s ease;
    }

    .premium-slider {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 40px;
        background: transparent;
        pointer-events: none;
        -webkit-appearance: none;
        appearance: none;
