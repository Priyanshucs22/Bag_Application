<%- include('./partials/admin-header') %>

            <!-- Page Header -->
            <div class="mb-8">
                <div class="flex items-center mb-4">
                    <div class="w-16 h-16 gradient-secondary rounded-2xl flex items-center justify-center mr-4">
                        <i class="ri-add-box-line text-white text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-4xl font-bold text-gray-800 mb-1">Create New Product</h1>
                        <p class="text-gray-600">Add a new product to your inventory</p>
                    </div>
                </div>
            </div>

            <!-- Flash Message -->
            <% if (success.length > 0) { %>
            <div class="flash-message flash-success mb-8">
                <i class="ri-check-circle-line"></i>
                <span><%= success %></span>
            </div>
            <% } %>
            <!-- Product Creation Form -->
            <div class="card-modern p-8">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 gradient-primary rounded-xl flex items-center justify-center mr-4">
                        <i class="ri-image-add-line text-white text-xl"></i>
                    </div>
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800">Product Information</h2>
                        <p class="text-gray-600">Fill in the details to create a new product</p>
                    </div>
                </div>

                <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="space-y-8">
                    <!-- Product Details Section -->
                    <div class="bg-gray-50 rounded-2xl p-6">
                        <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                            <i class="ri-information-line mr-2 text-blue-600"></i>
                            Product Details
                        </h3>

                        <!-- Product Image -->
                        <div class="mb-6">
                            <label class="block text-gray-700 font-semibold mb-3">
                                <i class="ri-image-line mr-2"></i>
                                Product Image
                            </label>
                            <div class="relative">
                                <input name="image" type="file" accept="image/*"
                                       class="block w-full text-gray-700 border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
                                       required />
                            </div>
                        </div>

                        <!-- Product Info Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">
                                    <i class="ri-price-tag-3-line mr-2"></i>
                                    Product Name
                                </label>
                                <input name="name" type="text" placeholder="Enter product name"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300"
                                       required />
                            </div>
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">
                                    <i class="ri-money-dollar-circle-line mr-2"></i>
                                    Product Price (₹)
                                </label>
                                <input name="price" type="number" placeholder="0" min="0"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300"
                                       required />
                            </div>
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">
                                    <i class="ri-discount-percent-line mr-2"></i>
                                    Discount (₹)
                                </label>
                                <input name="discount" type="number" placeholder="0" min="0"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300" />
                            </div>
                        </div>
                    </div>

                    <!-- Design Customization Section -->
                    <div class="bg-gray-50 rounded-2xl p-6">
                        <h3 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
                            <i class="ri-palette-line mr-2 text-purple-600"></i>
                            Design Customization
                        </h3>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">
                                    <i class="ri-paint-brush-line mr-2"></i>
                                    Background Color
                                </label>
                                <div class="flex gap-2">
                                    <input name="bgcolor" type="color" value="#ffffff"
                                           class="w-16 h-12 border border-gray-300 rounded-xl cursor-pointer" />
                                    <input type="text" placeholder="#ffffff"
                                           class="flex-1 px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300"
                                           onchange="document.querySelector('input[name=bgcolor]').value = this.value" />
                                </div>
                            </div>
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">
                                    <i class="ri-layout-line mr-2"></i>
                                    Panel Color
                                </label>
                                <div class="flex gap-2">
                                    <input name="panelcolor" type="color" value="#f8f9fa"
                                           class="w-16 h-12 border border-gray-300 rounded-xl cursor-pointer" />
                                    <input type="text" placeholder="#f8f9fa"
                                           class="flex-1 px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300"
                                           onchange="document.querySelector('input[name=panelcolor]').value = this.value" />
                                </div>
                            </div>
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">
                                    <i class="ri-text mr-2"></i>
                                    Text Color
                                </label>
                                <div class="flex gap-2">
                                    <input name="textcolor" type="color" value="#000000"
                                           class="w-16 h-12 border border-gray-300 rounded-xl cursor-pointer" />
                                    <input type="text" placeholder="#000000"
                                           class="flex-1 px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300"
                                           onchange="document.querySelector('input[name=textcolor]').value = this.value" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex justify-center">
                        <button type="submit"
                                class="btn-modern-primary px-8 py-4 text-lg font-semibold flex items-center space-x-3 transform hover:scale-105 transition-all duration-300">
                            <i class="ri-add-circle-line text-xl"></i>
                            <span>Create New Product</span>
                        </button>
                    </div>
                </form>
            </div>

<%- include('./partials/admin-footer') %>
