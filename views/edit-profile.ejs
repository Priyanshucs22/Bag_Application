<%- include('./partials/header') %>

<div class="w-full h-screen flex flex-col items-center px-20 py-20 gap-10">
    <div class="w-[50%] rounded-md shadow-lg p-6 bg-white">
        <h2 class="text-3xl font-semibold mb-4">Edit Your Profile</h2>
        
        <form action="/profile/update" method="POST">
            <div class="flex flex-col gap-4">
                <div>
                    <label for="name" class="text-lg">Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="w-full p-3 mt-2 rounded-md border"
                        value="<%= user.fullname %>"
                        required
                    />
                </div>
                <div>
                    <label for="email" class="text-lg">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full p-3 mt-2 rounded-md border"
                        value="<%= user.email %>"
                        required
                    />
                </div>
                <div>
                    <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600">Update Profile</button>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
