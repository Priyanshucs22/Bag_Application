        <aside class="admin-sidebar">
            <div class="mb-8">
                <div class="flex items-center mb-2">
                    <div class="w-10 h-10 gradient-primary rounded-xl flex items-center justify-center mr-3">
                        <i class="ri-shopping-bag-line text-white text-lg"></i>
                    </div>
                    <h2 class="text-xl font-bold">Admin Panel</h2>
                </div>
                <p class="text-gray-400 text-sm">Manage your bag shop</p>
            </div>

            <nav class="flex-1">
                <a href="/owners/login" class="admin-nav-link">
                    <i class="ri-dashboard-line mr-3"></i>
                    Dashboard
                </a>
                <a href="/owners/admin" class="admin-nav-link">
                    <i class="ri-add-box-line mr-3"></i>
                    Create Product
                </a>
                <a href="/owners/admin/orders" class="admin-nav-link">
                    <i class="ri-file-list-3-line mr-3"></i>
                    View Orders
                </a>
                <a href="/owners/logout" class="admin-nav-link" style="color: #f87171; margin-top: auto;">
                    <i class="ri-logout-box-line mr-3"></i>
                    Logout
                </a>
            </nav>
        </aside>

